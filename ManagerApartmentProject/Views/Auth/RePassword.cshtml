@model Account

<div class="content-wrapper d-flex align-items-center auth register-bg-1 theme-one">
    <div class="row w-100">
    <div class="col-lg-6 mx-auto">
        <h2 class="text-center mb-4">Đổi mật khẩu</h2>
        <div class="auto-form-wrapper">
        <form asp-action="RePassword" >

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="password" class="form-control" type="password" placeholder="Mật khẩu hiệnt tại">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="mdi mdi-check-circle-outline"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="newPassword" class="form-control" type="password" placeholder="Mật khẩu mới">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="mdi mdi-check-circle-outline"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="newPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input id="new-password-confirm" type="password" class="form-control" placeholder="Confirm Password">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="mdi mdi-check-circle-outline"></i>
                        </span>
                    </div>
                </div>
                <span id="validate-password" class="text-danger" style="display:none;">
                </span>
            </div>
            
            <div class="form-group">
                <input asp-for="accountOf" class="form-control" hidden>
            </div>

            <div class="form-group">
                <button id="submit" class="btn btn-primary submit-btn btn-block">Đổi mật khẩu</button>
            </div>
        </form>
        </div>
    </div>
    </div>
</div>
<!-- content-wrapper ends -->
@* </div> *@
@section Scripts{
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/js/vendor.bundle.addons.js"></script>
    <script src="https://lig-membres.imag.fr/donsez/cours/exemplescourstechnoweb/js_securehash/md5.js"></script>
    <script src="~/js/repassword.js"></script>
}
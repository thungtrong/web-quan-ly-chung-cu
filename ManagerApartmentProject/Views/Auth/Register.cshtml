@model Account
@using ManagerApartmentProject.Const

@{
    SelectList personList = new SelectList(ViewBag.personList, "ID", "name");
    
}

@* <div class="container-fluid page-body-wrapper full-page-wrapper"> *@
<div class="content-wrapper d-flex align-items-center auth register-bg-1 theme-one">
    <div class="row w-100">
    <div class="col-lg-6 mx-auto">
        <h2 class="text-center mb-4">Register</h2>
        <div class="auto-form-wrapper">
        <form asp-action="RegisterConfirm" >
            <div class="form-group">
                <div class="input-group">
                    <input asp-for="username" class="form-control" placeholder="Username">
                    <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="mdi mdi-check-circle-outline"></i>
                    </span>
                    </div>
                </div>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <input asp-for="password" class="form-control" type="password" placeholder="Password">
                    <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="mdi mdi-check-circle-outline"></i>
                    </span>
                    </div>
                </div>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <input id="password-confirm" type="password" class="form-control" placeholder="Confirm Password">
                    <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="mdi mdi-check-circle-outline"></i>
                    </span>
                    </div>
                </div>
                <span id="validate-password" class="text-danger" style="display:none;">
                </span>
            </div>
            

            <div class="form-group">
                <select asp-for="authority" class="form-control">
                    <option value="4">-- Select User Type --</option>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <option value="1">Admin</option>
                    }
                    <option value="2">Employee</option>
                    <option value="3">Tenant</option>
                </select>
                <span asp-validation-for="authority" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="accountOf" class="form-control" asp-items="personList"> 
                    <option value="0">-- Chọn người sỡ hữu tài khoản --</option>
                </select>
                <span asp-validation-for="accountOf" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button id="submit" class="btn btn-primary submit-btn btn-block">Register</button>
            </div>
        </form>
        </div>
    </div>
    </div>
</div>
<!-- content-wrapper ends -->
@* </div> *@
@section Scripts{
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/js/vendor.bundle.addons.js"></script>
    <script src="https://lig-membres.imag.fr/donsez/cours/exemplescourstechnoweb/js_securehash/md5.js"></script>
    <script src="~/js/register.js"></script>
}
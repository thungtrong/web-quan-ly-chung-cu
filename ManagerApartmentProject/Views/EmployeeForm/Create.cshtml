@model EmployeeForm

<form method="post" asp-action="Create">

    <div class="form-group">
        <select asp-for="title" class="form-select form-select-sm" >
            <option selected>Chọn loại đơn</option>
            <option value="Đơn xin nghỉ phép">Đơn xin nghỉ phép</option>
            <option value="Đơn xin ứng lương">Đơn xin ứng lương</option>
            <option value="Đơn xin thôi việc">Đơn xin thôi việc</option>
    </select>
     </div>
    <div class="form-group">
        <label asp-for="content"></label>
        <textarea asp-for="content" class="form-control" rows="8" placeholder="Nhập nội dung"></textarea>
        <span asp-validation-for="content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <input type="text" hidden />
    <input asp-for="dateRelease" hidden />

</form>

@section Css {
    <style>
        /* Create page */
        .form-control {
            font-size: 0.9em !important;
            line-height: 1.2em !important;
        }
    </style>
}

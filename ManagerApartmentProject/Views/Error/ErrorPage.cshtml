@{
    Layout = "_LayoutError";
    ViewData["Title"] = "Error";
    int code = ViewBag.statusCode;
    Console.WriteLine("{0}", code);
}

@if (code == 404)
{
    @await Html.PartialAsync("_NotFound.cshtml")
}
@if (code == 403)
{
    @await Html.PartialAsync("_AccessDenied.cshtml")
}
@if (code == 500)
{
    @await Html.PartialAsync("_InternalServer.cshtml")
}
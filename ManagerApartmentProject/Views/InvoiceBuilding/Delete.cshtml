@model InvoiceBuilding

<form asp-action="Delete" method="post">
    <input asp-for="ID" type="hidden" />
    <div class="form-group">
        <label asp-for="title"></label>
        <input asp-for="title"  class="form-control" disabled placeholder="Nhập tiêu đề">
        <span asp-validation-for="title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="amount"></label>
        <input asp-for="amount"  class="form-control" disabled placeholder="Nhập tiêu đề">
        <span asp-validation-for="amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description"></label>
        <input asp-for="description"  class="form-control" disabled placeholder="Nhập tiêu đề">
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="dateCreate"></label>
        <input asp-for="dateCreate"  class="form-control" disabled placeholder="Nhập tiêu đề">
        <span asp-validation-for="dateCreate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="status" /> Hoàn thành
            </label>
        </div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary submit">Delete</button>
        <button class="btn btn-default" asp-controller="Maintenance" asp-action="Index">Back</button>
    </div>
</form>
@model Maintenance

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="title"></label>
        <input asp-for="title" class="form-control" placeholder="Nhập tiêu đề">
        <span asp-validation-for="title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="amount"></label>
        <input asp-for="amount"  class="form-control" placeholder="Nhập tiêu đề">
        <span asp-validation-for="amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description"></label>
        <input asp-for="description"  class="form-control" placeholder="Nhập tiêu đề">
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="dateCreate"></label>
        <input asp-for="dateCreate"  class="form-control" placeholder="Nhập tiêu đề">
        <span asp-validation-for="dateCreate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="status"></label>
        <input asp-for="status"  class="form-control" placeholder="Nhập tiêu đề">
        <span asp-validation-for="status" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary submit">Save</button>
        <button class="btn btn-default" asp-controller="Maintenance" asp-action="Index">Back</button>
    </div>

</form>

@section Css {
    <style>
        /* Create page */
        .form-control {
            font-size: 0.9em !important;
            line-height: 1.2em !important;
        }
    </style>
}
